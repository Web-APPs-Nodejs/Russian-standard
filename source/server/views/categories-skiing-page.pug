extends main-frame.pug

block content


    // Declaration
    mixin link(href, name)
        //- attributes == {class: "btn"}
        .button-wrapper
            //<a class="btn btn-default" href="#" role="button">Link</a>
            a(class!=attributes.class href=href)= name

    mixin ski-event(event)
        .ski-event
            - var url = 'categories/ski/' + event._id;
            - var src = '/res/images/ski-main.jpg'; //event.pictures[0].src
            img(src=src, width=30, height=30, alt="extreme-sports-event-main-picture")
            a(href='/' + url)= event.title

            = '\n'
    .ski-banner
        img(src="/res/images/ski-main.jpg", width=300 alt="extreme-sports-ski")
        span.banner-extra-styles Hey man, do a can-can ski fahren?!

    +link('categories/add-event', 'Add event')(class="btn btn-default text-right" role="button")

    each events in result
        //h1= events.title
        +ski-event(events)