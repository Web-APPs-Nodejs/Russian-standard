body

.navbar.navbar-default.navbar-fixed-top
    .container
        .navbar-header
            a.navbar-brand(href='/') Extreme Sports
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                li
                    a(href="/") Categories
                li
                    a(href="/") Events
                li
