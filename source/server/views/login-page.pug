extends main-frame.pug

block content
    .container-fluid
        .row
            .col-md-4.col-md-offset-4.text-center
                form.form-signin(action="/login" method="post")
                    h2.form-signin-heading Please sign in
                    br  
                    label.sr-only(for='username') Username
                    input.form-control(type='text', placeholder='Username', name="username" required='true', autofocus='')
                    label.sr-only(for='password') Password  
                    input#inputPassword.form-control(type='password', name="password" placeholder='Password', required='')
                    br 
                    button.btn.btn-md.btn-success.btn-block(type='submit') Sign in
